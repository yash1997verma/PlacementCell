    <h1 class="text-center">Sign Up</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 border rounded shadow p-4">
                <form action="/signUp" method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input name ='name' type="text" class="form-control" id="name">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input name ='email' type="text" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input name ='password' type="password" class="form-control" id="password">
                    </div>
                    <div class="form-group mb-1">
                        <label for="confirmPassword">Confirm Password</label>
                        <input name ='confirmPassword' type="password" class="form-control" id="confirmPassword">
                    </div>
                  
                    <button  type="submit" class="btn btn-primary justify-content-center text-center">SignUp</button>
                    <br/>
                    <br/>
                  
                    <div class="d-inline">
                        <p class="d-inline">Already have an account? </p><a href="/signInPage" class="d-inline">SignIn</a>
                    </div>
                </form>
                
            </div>
        </div>
    </div>

    <script>
         <% if (flash.success && flash.success.length > 0) { %>
            new Noty({
                theme: 'relax',
                text: '<%=flash.success%>',
                type: 'success',
                layout: 'topRight',
                timeout: 1500
            }).show();
        <%}%>

        <% if (flash.error && flash.error.length > 0) { %>
                new Noty({
                    theme: 'relax',
                    text: '<%=flash.error%>',
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                }).show();
        <%}%>
      
       
    </script>
    
    

    
